<ui:DialogWindow x:Class="Spraylight.MurlTools.DlgRemoveDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
        Title="Remove or Delete File(s)" Height="172" Width="400" WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=btnRemove}" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True">
    
    <Grid Height="135" Width="380">
        <Label Content="Choose Remove to remove the selected file(s) from project.&#xD;&#xA;&#xD;&#xA;Choose Delete to permanently delete the selected file(s)." HorizontalAlignment="Left"  Height="68" Margin="10,10,0,0" VerticalAlignment="Top" Width="347"/>
        <Button Name="btnRemove" Content="Remove" Click="btnRemove_Click" Margin="128,0,184,12" IsDefault="True" Height="30" Width="65" VerticalAlignment="Bottom"/>
        <Button Name="btnDelete" Content="Delete" Click="btnDelete_Click" Margin="215,0,97,12" Height="30" Width="65" VerticalAlignment="Bottom"/>
        <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Margin="302,0,10,12" IsCancel="True" Height="30" Width="65" VerticalAlignment="Bottom"/>
    </Grid>
</ui:DialogWindow>
